        <Button x:Name="kfm" Content="Kijelölt feladat módosítása" FontSize="11pt" Height="35" Margin="392,128,24,284" Click="Felmod"></Button>
        <Button x:Name="kft" Content="Kijelölt feladat törlése" FontSize="11pt" Height="35" Margin="392,168,24,244" Click="Feltörl"></Button>
        <Button x:Name="kfv" Content="Kijelölt feladat visszaállít" FontSize="11pt" Height="35" Margin="392,286,24,126"></Button>
        <Button x:Name="kfvt" Content="Kijelölt feladat végleges törlése" FontSize="11pt" Height="35" Margin="392,334,24,78"></Button>
        <Label Content="Kristóf Berkes @ 2021" FontSize="11pt" Margin="482,414,0,0"></Label>
